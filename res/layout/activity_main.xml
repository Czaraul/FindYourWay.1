<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cozaraul.findyourway.MainActivity" >

    <TextView
        android:id="@+id/textDetaliu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Plecare"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/textPlecare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textDetaliu"
        android:layout_centerHorizontal="true"
        android:ems="10" >
        <requestFocus />
        </EditText>

    <TextView
        android:id="@+id/textInteractiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textPlecare"
        android:layout_centerHorizontal="true"
        android:text="Sosire"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/textSosire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textPlecare"
        android:layout_below="@+id/textInteractiv"
        android:ems="10" />

    <TextView
        android:id="@+id/textUserDetaliu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textSosire"
        android:layout_centerHorizontal="true"
        android:text="Data"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/textData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textUserDetaliu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:inputType="date" >

        
    </EditText>

    <Button
        android:id="@+id/butonCreare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:text="Creare cursa" />

    <Button
        android:id="@+id/butonTren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/butonCreare"
        android:layout_alignLeft="@+id/butonBus"
        android:text="Tren" />

    <Button
        android:id="@+id/butonBus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/butonTren"
        android:layout_alignLeft="@+id/butonMasina"
        android:text="Autobus" />

    <Button
        android:id="@+id/butonMasina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/butonBus"
        android:layout_centerHorizontal="true"
        android:text="Masina"
        android:onClick="toCarList"
        android:clickable="true" />

</RelativeLayout>